<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.razinggroups.presentation">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name="com.razinggroups.presentation.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="com.razinggroups.presentation.ui.vendor.manipulateVendor.ManipulateVendorActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.razinggroups.presentation.ui.vendor.createVendorTask.CreateVendorTaskActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name="com.razinggroups.presentation.ui.main.CreateTaskHomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>


        <activity
            android:name="com.razinggroups.presentation.ui.vendor.VendorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.brandCompany.BrandCompanyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.brandCompany.BrandManipulateScreen.BrandManipulateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.brandCompany.CompanyManipulateScreen.CompanyManipulateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.createTask.CreateTaskActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.employeeHomeScreen.EmployeeHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.razinggroups.presentation.ui.login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />

        <activity
            android:name="com.razinggroups.presentation.ui.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>