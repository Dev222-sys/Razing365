<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.razinggroup.presentation.com.razinggroups.presentation.ui.vendor.VendorActivity">

    <RelativeLayout
        android:id="@+id/activity_vendor_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorGrey">

        <ImageView
            android:id="@+id/activity_vendor_header_home_iv"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/cross_red" />

        <TextView
            android:id="@+id/activity_vendor_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="VENDOR"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/logo_black" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_vendor_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_vendor_header_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/activity_vendor_frame_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/activity_vendor_add_vendor_layout"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_vendor_add_company_layout_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:src="@drawable/plus_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_vendor_add_company_layout_iv"
                        android:layout_centerHorizontal="true"
                        android:text="Add Vendor"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_vendor_view_vendor_layout"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_vendor_view_company_layout_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:src="@drawable/edit_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_vendor_view_company_layout_iv"
                        android:layout_centerHorizontal="true"
                        android:maxLines="1"
                        android:text="View and Edit Vendor"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/activity_vendor_add_task_layout"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_vendor_add_brand_layout_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:src="@drawable/plus_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_vendor_add_brand_layout_iv"
                        android:layout_centerHorizontal="true"
                        android:text="Assign Task"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_vendor_view_tasks_layout"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_vendor_view_brand_layout_iv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:src="@drawable/edit_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_vendor_view_brand_layout_iv"
                        android:layout_centerHorizontal="true"
                        android:maxLines="1"
                        android:text="View Tasks"
                        android:textColor="@color/colorBlack" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>
