<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10000000"
        android:padding="16dp">

        <ImageView
            android:id="@+id/leave_list_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile_grey" />

        <TextView
            android:id="@+id/leave_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/leave_list_profile_iv"
            android:text="Sample name"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/leave_list_company_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_name_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/leave_list_profile_iv"
            android:text="Compant name" />

        <TextView
            android:id="@+id/leave_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_company_name_tv"
            android:layout_marginBottom="8dp"
            android:text="Title" />


        <TextView
            android:id="@+id/leave_list_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_title_tv"
            android:layout_marginBottom="8dp"
            android:text="Title" />

        <TextView
            android:id="@+id/leave_list_from_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_desc_tv"
            android:layout_marginBottom="8dp"
            android:text="From -   "
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/leave_list_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_desc_tv"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/leave_list_from_tag"
            android:text="Sample Date" />


        <TextView
            android:id="@+id/leave_list_to_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_from_tag"
            android:layout_marginBottom="8dp"
            android:text="To -   "
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/leave_list_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_from_tv"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/leave_list_to_tag"
            android:text="Sample Date" />

        <TextView
            android:id="@+id/leave_list_leave_remaining_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_to_tag"
            android:layout_marginBottom="8dp"
            android:text="Leave Remaining -   "
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/leave_list_leave_remaining_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_to_tv"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/leave_list_leave_remaining_tag"
            android:text="Sample Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_list_leave_remaining_tag"
            android:weightSum="2">

            <Button
                android:id="@+id/leave_list_reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorRed"
                android:text="Reject"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/leave_list_approve_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/colorGreen"
                android:text="Approve"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>